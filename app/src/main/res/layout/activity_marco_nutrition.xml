<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color">
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_ios_24_black"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:tint="@color/white"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/marco_title"
        app:layout_constraintTop_toTopOf="@id/btn_back"
        app:layout_constraintBottom_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white">
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/marco"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            app:layout_constraintTop_toTopOf="parent"
            />
        <ImageView
            android:id="@+id/colorCarbohydrates"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/circle"
            android:backgroundTint="#43a5dc"
            app:layout_constraintTop_toBottomOf="@id/marco"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:id="@+id/tvCarb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carb"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@id/colorCarbohydrates"
            app:layout_constraintStart_toEndOf="@id/colorCarbohydrates"
            android:layout_marginStart="16dp"/>
        <SeekBar
            android:id="@+id/controlCarb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvCarb"
            android:layout_marginTop="16dp"
            android:thumbTint="#43a5dc"
            android:progressTint="#43a5dc"
            android:max="100"/>
        <TextView
            android:id="@+id/caloCarb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 Calo"
            app:layout_constraintBottom_toTopOf="@id/controlCarb"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:id="@+id/gamCarb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 g"
            app:layout_constraintTop_toTopOf="@id/tvCarb"
            app:layout_constraintStart_toEndOf="@id/tvCarb"
            app:layout_constraintEnd_toStartOf="@id/caloCarb"
            android:layout_marginEnd="32dp"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>
        <ImageView
            android:id="@+id/colorProtein"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/orange"
            app:layout_constraintTop_toBottomOf="@id/controlCarb"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            />
        <TextView
            android:id="@+id/tvProtein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Protein"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@id/colorProtein"
            app:layout_constraintStart_toEndOf="@id/colorProtein"
            android:layout_marginStart="16dp"/>
        <SeekBar
            android:id="@+id/controlProtein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvProtein"
            android:layout_marginTop="16dp"
            android:thumbTint="@color/orange"
            android:progressTint="@color/orange"
            android:max="100"/>
        <TextView
            android:id="@+id/caloProtein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 Calo"
            app:layout_constraintBottom_toTopOf="@id/controlProtein"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:id="@+id/gamProtein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 g"
            app:layout_constraintTop_toTopOf="@id/tvProtein"
            app:layout_constraintStart_toEndOf="@id/tvProtein"
            app:layout_constraintEnd_toStartOf="@id/caloProtein"
            android:layout_marginEnd="32dp"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:id="@+id/colorFat"
            android:layout_width="16dp"
            android:layout_height="14dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/circle"
            android:backgroundTint="#ff2e78"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/controlProtein" />
        <TextView
            android:id="@+id/tvFat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_fat"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@id/colorFat"
            app:layout_constraintStart_toEndOf="@id/colorFat"
            android:layout_marginStart="16dp"/>
        <SeekBar
            android:id="@+id/controlFat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvFat"
            android:layout_marginTop="16dp"
            android:thumbTint="#ff2e78"
            android:progressTint="#ff2e78"
            android:max="100"/>
        <TextView
            android:id="@+id/caloFat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 Calo"
            app:layout_constraintBottom_toTopOf="@id/controlFat"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:id="@+id/gamFat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 g"
            app:layout_constraintTop_toTopOf="@id/tvFat"
            app:layout_constraintStart_toEndOf="@id/tvFat"
            app:layout_constraintEnd_toStartOf="@id/caloFat"
            android:layout_marginEnd="32dp"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/btn_finish"
            android:layout_width="383dp"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/bg_btn_radios"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="@string/btn_save"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>