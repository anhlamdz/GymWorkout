<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_log_keyboard"
    android:padding="8dp">
    <TextView
        android:id="@+id/number1"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="1"
        android:background="@drawable/bg_layout_keybroad"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:gravity="center"
        android:textSize="20.16sp"/>

    <TextView
        android:id="@+id/number2"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_layout_keybroad"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="20.16sp"

        app:layout_constraintEnd_toStartOf="@+id/number3"
        app:layout_constraintStart_toEndOf="@id/number1"
        app:layout_constraintTop_toTopOf="@id/number1" />
    <TextView
        android:id="@+id/number3"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="3"
        android:background="@drawable/bg_layout_keybroad"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/number1"
        app:layout_constraintEnd_toStartOf="@id/btnDelete"
        app:layout_constraintStart_toEndOf="@id/number2"
        android:gravity="center"
        android:textSize="20.16sp"/>
    <TextView
        android:id="@+id/btnDelete"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="Xóa"
        android:background="@drawable/bg_layout_keybroad"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/number1"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textSize="20.16sp"/>
    <TextView
        android:id="@+id/number4"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="4"
        android:background="@drawable/bg_layout_keybroad"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/number1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/number7"
        android:gravity="center"
        android:textSize="20.16sp"
        android:layout_marginTop="7.5dp"
        android:layout_marginBottom="7.5dp"/>

    <TextView
        android:id="@+id/number5"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_layout_keybroad"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="20.16sp"

        app:layout_constraintEnd_toStartOf="@+id/number3"
        app:layout_constraintStart_toEndOf="@id/number1"
        app:layout_constraintTop_toTopOf="@id/number4" />
    <TextView
        android:id="@+id/number6"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="6"
        android:background="@drawable/bg_layout_keybroad"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/number4"
        app:layout_constraintEnd_toStartOf="@id/btnDelete"
        app:layout_constraintStart_toEndOf="@id/number2"
        android:gravity="center"
        android:textSize="20.16sp"/>
    <TextView
        android:id="@+id/btnHide"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="Ẩn"
        android:background="@drawable/bg_layout_keybroad"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/number4"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textSize="20.16sp"/>
    <TextView
        android:id="@+id/number7"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="7"
        android:background="@drawable/bg_layout_keybroad"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/number4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/number00"
        android:gravity="center"
        android:textSize="20.16sp"
        android:layout_marginBottom="7.5dp"
        />

    <TextView
        android:id="@+id/number8"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_layout_keybroad"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="8"
        android:textColor="@color/black"
        android:textSize="20.16sp"

        app:layout_constraintEnd_toStartOf="@+id/number3"
        app:layout_constraintStart_toEndOf="@id/number1"
        app:layout_constraintTop_toTopOf="@id/number7" />
    <TextView
        android:id="@+id/number9"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="9"
        android:background="@drawable/bg_layout_keybroad"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/number7"
        app:layout_constraintEnd_toStartOf="@id/btnDelete"
        app:layout_constraintStart_toEndOf="@id/number2"
        android:gravity="center"
        android:textSize="20.16sp"/>
    <TextView
        android:id="@+id/number00"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="00"
        android:background="@drawable/bg_layout_keybroad"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:gravity="center"
        android:textSize="20.16sp"
        android:layout_marginTop="7.5dp"/>

    <TextView
        android:id="@+id/btnDot"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_layout_keybroad"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="."
        android:textColor="@color/black"
        android:textSize="20.16sp"

        app:layout_constraintEnd_toStartOf="@+id/number3"
        app:layout_constraintStart_toEndOf="@id/number1"
        app:layout_constraintTop_toTopOf="@id/number00" />
    <TextView
        android:id="@+id/number0"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="0"
        android:background="@drawable/bg_layout_keybroad"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/number00"
        app:layout_constraintEnd_toStartOf="@id/btnDelete"
        app:layout_constraintStart_toEndOf="@id/number2"
        android:gravity="center"
        android:textSize="20.16sp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnNext"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:text="Tiếp"
        android:background="@drawable/bg_btn_radios"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/number7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/number00"
        android:gravity="center"
        android:textSize="20.16sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>