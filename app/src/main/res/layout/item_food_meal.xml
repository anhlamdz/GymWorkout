<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item_setting"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        >
            <TextView
                android:id="@+id/nameMeal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/breakfast"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/descriptionMeal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carbs 159,2g * Fat 4,2g * Protein 22,8g"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="14sp"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@id/nameMeal"
                app:layout_constraintStart_toStartOf="@id/nameMeal"/>
        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Calo"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/nameMeal"
            android:layout_marginEnd="8dp"
            />
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ltGray"
            app:layout_constraintTop_toBottomOf="@id/descriptionMeal"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/infoFood"
            app:layout_constraintTop_toBottomOf="@id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"/>
        <TextView
            android:id="@+id/btn_addFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_food"
            android:textAllCaps="true"
            android:textColor="@color/theme_color"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintTop_toBottomOf="@id/infoFood"
            android:layout_marginHorizontal="8dp"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>