<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="@string/title_food"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="21.33sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingVertical="17dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/bg_item_setting"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout"
        android:layout_marginHorizontal="16dp"
        >
            <TextView
                android:id="@+id/Calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_calories"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="8dp"
              />
            <ProgressBar
                android:id="@+id/progressBarFood"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:progress="0"
                android:indeterminateOnly="false"
                android:progressDrawable="@drawable/progress_bar_food"
                app:layout_constraintTop_toTopOf="@id/Calories"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                />
            <TextView
                android:id="@+id/remaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tdee"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="25dp"
                app:layout_constraintTop_toTopOf="@id/progressBarFood"
                app:layout_constraintBottom_toBottomOf="@id/progressBarFood"
                app:layout_constraintStart_toStartOf="@id/progressBarFood"
                app:layout_constraintEnd_toEndOf="@id/progressBarFood"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remaining"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/remaining"
                app:layout_constraintStart_toStartOf="@id/progressBarFood"
                app:layout_constraintEnd_toEndOf="@id/progressBarFood"/>
            <TextView
                android:id="@+id/baseGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/base_goal"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="32dp"/>
            <TextView
                android:id="@+id/base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tdee"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/baseGoal"
               app:layout_constraintStart_toStartOf="@id/baseGoal"
                app:layout_constraintEnd_toEndOf="@id/baseGoal"/>
            <TextView
                android:id="@+id/eaten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_eaten"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                app:layout_constraintTop_toBottomOf="@id/base"
                app:layout_constraintStart_toStartOf="@id/baseGoal"
                app:layout_constraintEnd_toEndOf="@id/baseGoal"
                android:layout_marginTop="16dp"
                />
            <TextView
                android:id="@+id/tvEaten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/eaten"
                app:layout_constraintStart_toStartOf="@id/baseGoal"
                app:layout_constraintEnd_toEndOf="@id/baseGoal"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/foodRcv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>